
vendor-prefixes = o ms moz webkit official 

@font-face 
	font-family 'icon-yorsh033'
	src url('../fonts/icon-yorsh033.eot?-7ney0n')
	src url('../fonts/icon-yorsh033.eot?#iefix-7ney0n') format('embedded-opentype'),
		url('../fonts/icon-yorsh033.woff?-7ney0n') format('woff'),
		url('../fonts/icon-yorsh033.ttf?-7ney0n') format('truetype'),
		url('../fonts/icon-yorsh033.svg?-7ney0n#icon-yorsh033') format('svg')
	font-weight normal
	font-style normal


azul = #2980B3
verde-aqua = #99ffc3 
verde-sea = #19B698
blanco =  #FBFCFC
plateado = #CBD0D3
plateado_claro = #e5e5e5
azul_oscuro =  #354B60
azul_oscuromas = #203439
morado = #651850
turqueza = #1DD2AF

body
	background #212121 url(../img/pattern.png)
	font-size 16px
img
	max-width 100%;
header
	background verde-sea
	.avatar
		margin 0.2em 0.5em
		padding:0 1em 0 1em;
		img
			background plateado
			border-radius 50%
			box-shadow rgba(0,0,0,0.7) -2px 2px 3px
			width 150px

	.avatar
	.who-iam
		display inline-block
		vertical-align middle
	.who-iam	
		text-shadow:rgba(0,0,0,0.3) -1px 1px 1px	
		.name
			margin-bottom 0.2em
			color blanco
		.profesion
			color plateado_claro
			font-size 1.2em
			
footer 
	background azul_oscuromas url(../img/pattern.png)
	color blanco
	height 100px
	padding-top 2em
	text-align center

.contacto
.projects	
	background verde-sea
	box-shadow rgba(0,0,0,0.3) -2px 2px 5px
	padding 0.5em
	text-align center
	width 96%
	margin 0 auto 3em auto
	.facebook
	.twitter
	.github
		background azul_oscuro
		color blanco
		display inline-block
		font-size 1.2em
		padding 0.7em 2em
		margin 1em
		text-decoration none
		&:hover
			box-shadow -2px 2px 5px #000
			color blanco
			transform scale(1.1)
			transition all 0.2s ease-in-out

.contacto
	.facebook
		background #133783
		.facebook-icon
			font-family "icon-yorsh033"
			font-size 1.5em
			font-style normal
			&:before
				content "\e600"
	.twitter
		background #00ACEE			
		.twitter-icon
			font-family "icon-yorsh033"
			font-style normal
			font-size 1.5em
			&:before
				content "\e601"
	.github
		background #202021			
		.github-icon
			font-family "icon-yorsh033"
			font-style normal
			font-size 1.5em
			&:before
				content "\e602"				
			
.information
	font-size 0
	.about
	.know
		background verde-sea
		box-sizing border-box
		box-shadow rgba(0,0,0,0.3) -2px 2px 5px
		color plateado_claro
		display inline-block
		font-size 16px
		margin 0 1% 3em 1%  
		padding 0.5em
		vertical-align top
		width 58%
	.know
		width 38%	

.main	
	background #D4F0EA
	width 80%
	margin 0 auto
	max-width 1300px

.menu
	background azul_oscuro url(../img/pattern.png)
	margin 0
	margin-bottom 3em
	padding-right 4em
	text-align right

		
	li
		display inline-block
		vertical-align middle
		a
			display block
			color blanco
			font-weight bold
			padding 0.5em 0.2em
			text-decoration none
			line-height 1.5em
			&:hover
				background verde-sea
				color azul_oscuro
				text-decoration underline





.projects
	.item-project
		border 10px solid azul_oscuro
		box-shadow 1px 1px 2px #e6e6e6
		display inline-block
		height 214px
		margin 10px
		min-width 165px 
		overflow hidden
		position relative
		vertical-align top
		text-align center
		width 165px
		&:hover
			box-shadow -1px 1px 5px #000
		&:hover img
			transform scale(1.2)
		&:hover .mask
			opacity 1
		&:hover h2
		&:hover p
		&:hover .info
			opacity 1
			transform translateY(0px)
		&:hover p
			transition-delay 0.1s
		&:hover .info
			transition-delay 0.2s						

		.mask
			background rgba(29,210,175,0.8)
			height 214px
			left 0
			opacity 0
			position absolute
			top 0
			transition all 0.2s ease-in-out
			width 165px

		img
			display block
			position relative
			transition all 0.2s linear

		h2
			background #354B60
			color blanco
			font-size 1em
			margin 20px 0 0 0
			opacity 0				
			padding 10px
			position relative
			text-transform uppercase
			text-align center
			transition all 0.2s ease-in-out
			transform translateY(100px)

		p
			color blanco
			font-family Georgia serif
			font-style italic
			font-size 12px
			opacity 0 
			position relative
			padding 10px 20px 20px
			text-align center
			transition all 0.2s ease-in-out
			transform translateY(100px)

		.info
			background #354B60
			box-shadow 0 0 1px #000
			color blanco
			text-decoration none
			opacity 0 
			padding 5px 14px
			text-transform uppercase
			transition all 0.2s ease-in-out
			&:hover
				box-shadow 0 0 5px #000		



.subtitle
	background azul_oscuro
	color blanco
	font-size 24px
	margin 0.5em auto 1em auto
	position relative
	padding 0.2em
	text-align center
	width 60%
	&:before 
		border-bottom 20px solid transparent
		border-left 10px solid verde-sea
		border-top 20px solid transparent
		content ""
		position absolute
		top 0
		left 0
	&:after
		border-bottom 20px solid transparent
		border-right 10px solid verde-sea
		border-top 20px solid transparent
		content ""
		position absolute
		right 0
		top 0	
.texto 
	color plateado_claro	
/*1050px*/
@media screen and (max-width: 65.625em)
	.main
		width 100%
	.subtitle
		width 80%	

/*770px*/
@media screen and (max-width: 48.125em)
	.information
		.about
		.know
			display block		
			width 98%
	
	.facebook
	.twitter
	.github
		display block
		width 60%

	.subtitle
		width 95%	

/*420px*/
@media screen and (max-width: 26.25em)		
	header
		text-align center
		padding-bottom 1em